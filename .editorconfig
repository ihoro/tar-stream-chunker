root = true

[*.c,*.h]
charset = utf-8
indent_style = tab
indent_size = 1
continuation_indent_size = 2
tab_width = 8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
continuation_indent_size = 2
tab_width = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
